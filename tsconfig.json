{
    "compilerOptions": {
        "target": "es2022",
        "module": "es2022",
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowJs": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "rootDir": "./webapp",
        "baseUrl": "./",
        "paths": {
            "ui5-typescript-from-scratch/*": ["webapp/*"]
        },
        "composite": true,
        "typeRoots": [ 
            "./node_modules/@types",
            "./node_modules/@sapui5"
        ]
        
    },
    "include": ["./webapp/**/*"]
}